<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alphacode98.tansportmanager">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TansportManager">

        <activity android:name=".MainActivity"></activity>
        <activity android:name=".SignUp"></activity>
        <activity android:name=".TopUp"></activity>
        <activity android:name=".CurrentJourney"></activity>
        <activity android:name=".StartJourney"></activity>
        <activity android:name=".eBill"></activity>
        <activity android:name=".MyQR"></activity>
        <activity android:name=".ScanBusCode"></activity>
        <activity android:name=".InsertNewFineHome"></activity>
        <activity android:name=".FineInserted"></activity>
        <activity android:name=".ScanPassengerCode"></activity>
        <activity android:name=".SignIn">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>